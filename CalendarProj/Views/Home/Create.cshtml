@model CalendarProj.DAO.Models.CustomEvent


<div class="border p-3">
    <div class="form-group row">
        <h2 class="text-info pl-3">Create new fast metting</h2>
    </div>
    <div class="row">
        <div class="col-6">
            <form asp-action="Create" method="post">

                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Summary"></label>
                    </div>
                    <div class="col">
                        <input asp-for="Summary" class="form-control" />
                        <span asp-validation-for="Summary" class="text-danger"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Start.DateTime"></label>
                    </div>
                    <div class="col">
                        <input asp-for="Start.DateTime" class="form-control" />

                        @if (ViewBag.ErrorMessageDate != null)
                        {
                            <span class="text-danger">@ViewBag.ErrorMessageDate</span>
                        }
                        else
                        {
                            <span asp-validation-for="Start" class="text-danger"></span>
                        }

                    </div>
                </div>

                <div class="form-group row d-flex justify-content-end">

                    <div class="col">
                        <label asp-for="Types"></label>
                    </div>
                    <select class="form-control col-4 mr-3" asp-for="TypeEnumInt" asp-items="@Model.Types"></select>
                </div>
                <small class="form-text text-muted d-flex justify-content-end">Short = 15 min, Long = 60 min</small>

                <div class="row d-flex justify-content-end">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>

                    </div>
                </div>
            </form>
        </div>
        @{ 
            var src = Url.Content("\\uploads\\meeting.jpg");
        }
        <div class="col"><img src="@src" class="img-thumbnail" alt="Alternate Text" /> </div>
    </div>
</div>